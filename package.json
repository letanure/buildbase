{
	"name": "buildbase",
	"version": "0.1.0",
	"private": true,
	"packageManager": "pnpm@10.0.0",
	"type": "module",
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"preinstall": "node scripts/preinstall.js",
		"prepare": "husky install",
		"test": "vitest --config tests/vitest.config.ts",
		"test:coverage": "vitest --config tests/vitest.config.ts --coverage"
	},
	"lint-staged": {
		"*.ts": ["pnpm biome check --apply"],
		"*.tsx": ["pnpm biome check --apply"],
		"*.js": ["pnpm biome check --apply"]
	},
	"dependencies": {
		"class-variance-authority": "^0.7.1",
		"next": "15.3.3",
		"next-intl": "^4.1.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@eslint/eslintrc": "^3",
		"@tailwindcss/postcss": "^4",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@vitejs/plugin-react": "^4.5.1",
		"@vitest/coverage-v8": "3.2.2",
		"eslint": "^9",
		"eslint-config-next": "15.3.3",
		"husky": "^8.0.0",
		"jest-axe": "^10.0.0",
		"jsdom": "^26.1.0",
		"lint-staged": "^16.1.0",
		"tailwindcss": "^4",
		"typescript": "^5",
		"vitest": "^3.2.2"
	}
}
